<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:text="Lỗi"
                android:textColor="@color/colorYellow1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivVaoDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:background="@drawable/ic_notifications_blue_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:layout_toLeftOf="@+id/swVaodiem"
                    android:layout_toRightOf="@+id/ivVaoDiem"
                    android:text="@string/vaodiemkhongcanhoi" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swVaodiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/swVaodiem"
                    android:layout_toRightOf="@+id/ivVaoDiem"
                    android:background="@color/colorGray1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivThongBaoGioVaoDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:background="@drawable/ic_notifications_blue_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:layout_toLeftOf="@+id/swThongBaoGioVaoDiem"
                    android:layout_toRightOf="@+id/ivThongBaoGioVaoDiem"
                    android:text="@string/thongbaogiovaodiem" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swThongBaoGioVaoDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/swThongBaoGioVaoDiem"
                    android:layout_toRightOf="@+id/ivThongBaoGioVaoDiem"
                    android:background="@color/colorGray1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivThongBaoTruocGioVaoDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:background="@drawable/ic_notifications_off_blue_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:layout_toLeftOf="@+id/swThongBaoTruocGioVaoDiem"
                    android:layout_toRightOf="@+id/ivThongBaoTruocGioVaoDiem"
                    android:text="@string/thongbaotruocgiovaodiem" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swThongBaoTruocGioVaoDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/swThongBaoTruocGioVaoDiem"
                    android:layout_toRightOf="@+id/ivThongBaoTruocGioVaoDiem"
                    android:background="@color/colorGray1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivNgonNgu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:background="@drawable/ic_language_blue_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:layout_toLeftOf="@+id/tvNgonNgu"
                    android:layout_toRightOf="@+id/ivNgonNgu"
                    android:text="@string/ngonngu" />

                <TextView
                    android:id="@+id/tvNgonNgu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_big"
                    android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:text="Tiếng Việt" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/tvNgonNgu"
                    android:layout_toRightOf="@+id/ivNgonNgu"
                    android:background="@color/colorGray1" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
